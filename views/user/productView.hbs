<script>
    document.addEventListener("DOMContentLoaded",function() {
        const bigImg = document.getElementById("product-zoom")
        const sideImageLinks = document.querySelectorAll(".product-gallery-item")

        sideImageLinks.forEach(links=>{
            links.addEventListener("click",function(event){
                event.preventDefault()

                const sideImageSrc = this.getAttribute("data-image")
                const zoomImageSrc = this.getAttribute("data-zoom-image")

                bigImg.src = sideImageSrc
                bigImg.setAttribute("data-zoom-image",zoomImageSrc)

                sideImageLinks.forEach(links=> links.classList.remove("active"))
                this.classList.add("active")
            })
        })
    })
</script>

    <script>
    document.querySelectorAll('.btn-wishlist').forEach(button => {
        button.addEventListener('click', async function(event) {
            event.preventDefault();
            const productId = this.getAttribute('data-id');
            const user = {{user}}

            if (!user) {
            return Swal.fire({
                text: 'Please login to add products to wishlist!',
                icon: 'error',
                toast: true,
                position: 'top-end',
                timer: 3000,
                showConfirmButton: false
            })
         }
            
            try {
                const response = await fetch('/addToWishlist', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({ productId })
                });
                
                const result = await response.json();
                if (result.success) {
                    Swal.fire({
                        title: 'Added to wishlist!',
                        text: 'The product has been added to your wishlist.',
                        icon: 'success',
                        toast: true,
                        position: 'top-end',
                        timer: 3000,
                        showConfirmButton: false
                    });
                } else {
                    Swal.fire({
                        title: result.message,
                        icon: 'warning',
                        toast: true,
                        position: 'top-end',
                        timer: 3000,
                        showConfirmButton: false
                    });
                }
            } catch (error) {
                Swal.fire({
                    title: 'Error',
                    text: 'An error occurred while adding to the wishlist.',
                    icon: 'error',
                    toast: true,
                    position: 'top-end',
                    timer: 3000,
                    showConfirmButton: false
                });
            }
        });
    });
</script>

