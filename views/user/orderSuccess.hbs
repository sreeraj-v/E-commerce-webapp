
    <div class="page-wrapper">
{{>allPageHeader}}

<main class="main">
    <nav aria-label="breadcrumb" class="breadcrumb-nav border-0 mb-0">
        <div class="container">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="index.html" class="text-muted">Home</a></li>
                <li class="breadcrumb-item"><a href="#" class="text-muted">Shop</a></li>
                <li class="breadcrumb-item active" aria-current="page">Order Confirmed</li>
            </ol>
        </div>
    </nav>

    <div class="page-content">
        <div class="container">
            <div class="row">
                <div class="col-lg-8">
                    <div class="card border-0 mb-4 py-5" style="background-color: #cef3d1;">
                        <div class="card-body text-center">
                            <div class="mb-4 position-relative d-inline-block">
                                <div class="bg-white rounded-circle d-inline-flex align-items-center justify-content-center" style="width: 80px; height: 80px; box-shadow: 0 0 10px rgba(0,0,0,0.1);">
                                    <i class="icon-check text-success" style="font-size: 4rem;"></i>
                                </div>
                                <div class="position-absolute" style="top: -15px; left: -15px; right: -15px; bottom: -15px;">
                                    <i class="icon-star text-warning" style="font-size: 1rem; position: absolute; top: 0; left: 20%;"></i>
                                    <i class="icon-star text-warning" style="font-size: 1rem; position: absolute; top: 15%; left: 0;"></i>
                                    <i class="icon-star text-primary" style="font-size: 0.8rem; position: absolute; top: 30%; right: 10%;"></i>
                                    <i class="icon-star text-primary" style="font-size: 0.5rem; position: absolute; top: 20%; right: 10%;"></i>
                                    <i class="icon-star text-danger" style="font-size: 1.2rem; position: absolute; bottom: 10%; left: 10%;"></i>
                                    <i class="icon-star text-info" style="font-size: 0.9rem; position: absolute; bottom: 30%; right: 20%;"></i>
                                </div>
                            </div>
                            <h2 class="card-title mb-2">THANK YOU</h2>
                            <h3 class="mb-3">YOUR ORDER IS CONFIRMED</h3>
                            <p class="text-muted">We will be sending you an email confirmation to {{order.address.email}} shortly</p>
                        </div>
                    </div>

                    <div class="card border-0 mb-3" style="background-color: #f8f9fa;">
                        <div class="card-body">
                            <h4 class="mb-3 p-4" style="border-bottom: 2px solid #dee2e6;">Delivery Details</h4>
                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <div>
                                    <p class="mb-1">{{order.orderId}} was placed on {{date order.datePlaced "MMMM Do, YYYY"}} </p>
                                    <p class="mb-1"><strong>Expected Delivery Date:</strong>{{date order.deliveryExpectedDate "MMMM Do, YYYY"}} </p>
                                    <a href="/myaccount" class="btn btn-link p-0 text-primary">Track Your Order</a>
                                </div>
                                  <a href="/download-invoice/{{order.orderId}}" class="btn btn-outline-primary-2 btn-sm">Download Invoice</a>
                            </div>
                        </div>
                    </div>

                    <div class="text-center mt-4 mb-5">
                        <a href="/" class="btn btn-outline-primary-2 btn-minwidth-lg">
                            <span>CONTINUE SHOPPING</span>
                            <i class="icon-long-arrow-right"></i>
                        </a>
                    </div>
                </div>

                <div class="col-lg-4">
                    <div class="card border-0 mb-3" style="background-color: #f8f9fa;">
                        <div class="card-body">
                            <h4 class="mb-3 p-3" style="border-bottom: 2px solid #dee2e6;">DELIVERY ADDRESS</h4>
                            <p class="mb-2">{{order.address.streetAddress}},{{order.address.city}} <br>{{order.address.country}}<br>{{order.address.pincode}} </p>
                            <a href="#" class="btn btn-link p-0 text-primary">Change Details</a>
                        </div>
                    </div>

                    <div class="card border-0 mb-3" style="background-color: #f8f9fa;">
                        <div class="card-body">
                            <h4 class="mb-3 p-3" style="border-bottom: 2px solid #dee2e6;">CONTACT DETAILS</h4>
                            <p class="mb-1">{{order.address.email}}</p>
                            <p class="mb-1">{{order.address.phone}}</p>
                        </div>
                    </div>

                    <div class="card border-0" style="background-color: #f8f9fa;">
                        <div class="card-body">
                            <h4 class="mb-3 p-3" style="border-bottom: 2px solid #dee2e6;">ORDER SUMMARY </h4>
                            <div class="d-flex justify-content-between mb-1">
                                <span>Sub Total</span>
                                <span>₹{{order.finalAmount}}.00</span>
                            </div>
                            <div class="d-flex justify-content-between mb-1">
                                <span>Delivery</span>
                                <span>₹00.00</span>
                            </div>
                            <div class="d-flex justify-content-between font-weight-bold mt-2 pt-2" style="border-top: 1px solid #dee2e6;">
                                <span>Total</span>
                                <span>₹{{order.finalAmount}}.00</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

{{>allPageFooter}}

    </div><!-- End .page-wrapper -->
    <button id="scroll-top" title="Back to Top"><i class="icon-arrow-up"></i></button>

{{>mobileView}}

