<!-- Add Main Banner Modal -->
<div class="modal fade" id="addMainBannerModal" tabindex="-1" aria-labelledby="addMainBannerModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="addMainBannerModalLabel">Add Main Banner</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <form id="addMainBannerForm" action="/admin/addMainBanner" method="post" enctype="multipart/form-data">
          <input type="hidden" name="type" value="main">
          <div class="mb-3">
            <label for="mainTitle" class="form-label">Title</label>
            <input type="text" class="form-control" id="mainTitle" name="title" required>
          </div>
          <div class="mb-3">
            <label for="mainSubtitle" class="form-label">Subtitle</label>
            <input type="text" class="form-control" id="mainSubtitle" name="subtitle" required>
          </div>
          <div class="mb-3">
            <label for="mainDescription" class="form-label">Description</label>
            <textarea class="form-control" id="mainDescription" name="description" required></textarea>
          </div>
          <div class="mb-3">
            <label for="mainImage" class="form-label">Image</label>
            <input type="file" class="form-control" id="mainImage" name="image" accept="image/*" required>
          </div>
          <div class="mb-3">
            <label for="mainLink" class="form-label">Link</label>
            <input type="text" class="form-control" id="mainLink" name="link" required>
          </div>
          <div class="mb-3">
            <label for="mainDisplayOrder" class="form-label">Display Order</label>
            <input type="number" class="form-control" id="mainDisplayOrder" name="displayOrder" required>
          </div>
          <button type="submit" class="btn btn-primary">Add Main Banner</button>
        </form>
      </div>
    </div>
  </div>
</div>

