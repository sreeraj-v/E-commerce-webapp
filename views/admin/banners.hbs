{{> adminSidebar}}
{{> adminNavbar}}
<div class="container-fluid pt-4 px-4">
  <div class="bg-light text-center rounded p-4">
    <!-- Tabs -->
    <ul class="nav nav-tabs mb-3" id="bannerTabs" role="tablist">
      <li class="nav-item" role="presentation">
        <button class="nav-link active" id="main-tab" data-bs-toggle="tab" data-bs-target="#main" type="button" role="tab" aria-controls="main" aria-selected="true">Main Banner</button>
      </li>
      <li class="nav-item" role="presentation">
        <button class="nav-link" id="brand-tab" data-bs-toggle="tab" data-bs-target="#brand" type="button" role="tab" aria-controls="brand" aria-selected="false">Brand Banner</button>
      </li>
      <li class="nav-item" role="presentation">
        <button class="nav-link" id="mid-tab" data-bs-toggle="tab" data-bs-target="#mid" type="button" role="tab" aria-controls="mid" aria-selected="false">Mid Banner</button>
      </li>
      <li class="nav-item" role="presentation">
        <button class="nav-link" id="bottom-tab" data-bs-toggle="tab" data-bs-target="#bottom" type="button" role="tab" aria-controls="bottom" aria-selected="false">Bottom Banner</button>
      </li>
    </ul>

    <!-- Tab Content -->
    <div class="tab-content" id="bannerTabsContent">
      <!-- Main Banner Tab -->
      <div class="tab-pane fade show active" id="main" role="tabpanel" aria-labelledby="main-tab">
        <button type="button" class="btn btn-primary mb-3" data-bs-toggle="modal" data-bs-target="#addMainBannerModal">
          Add Main Banner
        </button>
        {{> bannerTable banners=mainBanners}}
      </div>

      <!-- Brand Banner Tab -->
      <div class="tab-pane fade" id="brand" role="tabpanel" aria-labelledby="brand-tab">
        <button type="button" class="btn btn-success mb-3" data-bs-toggle="modal" data-bs-target="#addBrandBannerModal">
          Add Brand Banner
        </button>
        {{> bannerTable banners=brandBanners}}
      </div>

      <!-- Mid Banner Tab -->
      <div class="tab-pane fade" id="mid" role="tabpanel" aria-labelledby="mid-tab">
        <button type="button" class="btn btn-info mb-3" data-bs-toggle="modal" data-bs-target="#addMidBannerModal">
          Add Mid Banner
        </button>
        {{> bannerTable banners=midBanners}}
      </div>

      <!-- Bottom Banner Tab -->
      <div class="tab-pane fade" id="bottom" role="tabpanel" aria-labelledby="bottom-tab">
        <button type="button" class="btn btn-warning mb-3" data-bs-toggle="modal" data-bs-target="#addBottomBannerModal">
          Add Bottom Banner
        </button>
        {{> bannerTable banners=bottomBanners}}
      </div>
    </div>
  </div>
</div>

<!-- Banner Table Partial -->
{{#*inline "bannerTable"}}
<div class="table-responsive">
  <table class="table text-start align-middle table-bordered table-hover mb-0">
    <thead>
      <tr class="text-dark">
        <th scope="col"><input class="form-check-input" type="checkbox"></th>
        <th scope="col">Type</th>
        <th scope="col">Title</th>
        <th scope="col">Subtitle</th>
        <th scope="col">Description</th>
        <th scope="col">Image</th>
        <th scope="col">Link</th>
        <th scope="col">Display Order</th>
        <th scope="col">Action</th>
      </tr>
    </thead>
    <tbody>
      {{#each banners}}
      <tr>
        <td><input class="form-check-input" type="checkbox"></td>
        <td>{{this.type}}</td>
        <td>{{this.title}}</td>
        <td>{{this.subtitle}}</td>
        <td>{{this.description}}</td>
        <td><img src="{{this.image}}" alt="Banner Image" style="max-width: 100px; max-height: 60px;"></td>
        <td>{{this.link}}</td>
        <td>{{this.displayOrder}}</td>
        <td>
          <div class="d-flex justify-content-start">
            <a class="btn btn-sm btn-primary" href="javascript:void(0);" data-bs-toggle="modal" data-bs-target="#editBannerModal"
              data-banner='{{json this}}'>
              <i class="fa fa-edit"></i>
            </a> 
            <a class="btn btn-sm btn-danger ms-2" href="/admin/deleteBanner?id={{this._id}}"><i class="fa fa-trash"></i></a>
          </div>
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>
</div>
{{/inline}}

